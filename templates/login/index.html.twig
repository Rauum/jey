<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Se connecter{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <script src="https://kit.fontawesome.com/9d027f2cc5.js" crossorigin="anonymous"></script>
        {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous"> #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
              crossorigin="anonymous">

    {% endblock %}
        <script type="text/javascript" charset="utf-8">
            function voirMDP() {
                var x = document.getElementById("password");
                if (x.type === "password") {
                    x.type = "text";
                } else {
                    x.type = "password";
                }
            }
        </script>
</head>
<body class="no-top h-100">
{% block body %}
    <div class="container-fluid bg-gold h-100">
        <div class="row align-items-center justify-content-center">
            <div class="col-4"></div>
            <div class="col-4 d-flex flex-column align-items-center justify-content-center">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <a class="px-3 mt-3 mb-1" href="{{ path('app_front_home') }}">
                    <img width="200px" src="/img/logo_carre_jaune.png">
                </a>
                <h1 class="mb-5 h2 text-center">Se connecter</h1>
                <form class="w-100" action="{{ path('app_login') }}" method="post">
                    <div class="mb-3">
                        <label class="form-label" for="username">Email</label>
                        <input class="bg-transparent w-100 p-3" type="text" id="username" name="_username"
                               value="{{ last_username }}" aria-describedby="emailHelp" placeholder="Veuillez saisir votre adresse mail" required>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <label for="password" class="form-label">Mot de passe</label>
                        </div>
                        <div class="position-relative">
                            <input type="password" class="bg-transparent w-100 p-3" id="password" name="_password" placeholder="Veuillez saisir votre mot de passe" required>
                        </div>
                    </div>
                    <div class=" d-flex justify-content-center w-100">
                        <button type="submit" class="btn-blue-plein mb-1 py-3 px-5">Se connecter</button>
                    </div>
                </form>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
{% endblock %}
</body>
</html>